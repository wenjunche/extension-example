{
  "name": "Storage Example",
  "description": "Storage Example",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"
                ],
  "host_permissions": [
      "https://example.com/*",
      "http://localhost:8081/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "http://localhost:8081/*", "https://example.com/*", "https://cdn.openfin.co/*", "https://www.google.com/*"],
        "run_at": "document_idle",
        "all_frames": true,
        "js": ["contentScript.js"]
      }
    ]
}
